<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="cc.lkme.addemo.UriSchemeActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="URI Scheme："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    app:layout_constraintBaseline_toBaselineOf="@+id/uri_scheme"
                    android:id="@+id/textView4"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="8dp"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textUri"
                    android:ems="10"
                    android:id="@+id/uri_scheme"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:singleLine="false"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/textView4"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginEnd="8dp"
                    android:maxHeight="100dp"
                    android:hint="必填"/>

            <TextView
                    android:text="包名："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    app:layout_constraintRight_toRightOf="@+id/textView4"
                    app:layout_constraintBaseline_toBaselineOf="@+id/package_name"
                    android:layout_marginRight="0dp"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/package_name"
                    app:layout_constraintTop_toBottomOf="@+id/uri_scheme"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:hint="选填"
                    app:layout_constraintLeft_toRightOf="@+id/textView3"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

            <Button
                    android:text="跳转"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/jump"
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/package_name"
                    />

            <TextView
                    android:text="Demo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/demo"
                    android:textSize="18sp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/jump"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

            <TextView
                    android:text="今日头条"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/snssdk143"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/demo"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

            <TextView
                    android:text="淘宝"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/taobao"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/snssdk143"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

            <TextView
                    android:text="网易新闻"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/newsapp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/taobao"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

            <TextView
                    android:text="百度地图"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/baidumap"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/newsapp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

            <TextView
                    android:text="手机百度"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/baidubox"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/baidumap"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="18sp"/>

            <TextView
                    android:text="新浪微博-热门话题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sinaweibo_huati"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/baidubox"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.504"/>

            <TextView
                    android:text="新浪微博-热门微博"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sinaweibo_weibo"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/sinaweibo_huati"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

            <TextView
                    android:text="爱奇艺"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iqiyi"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/sinaweibo_weibo"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>
